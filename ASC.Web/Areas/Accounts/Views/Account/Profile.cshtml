@model ASC.Web.Areas.Accounts.Models.ProfileModel
@{
	Layout = "_SecureLayout";
}
<div>
	<div class="row"
		<div class="col padding-left-20px padding-right-20px">
			@* Detail Section *@
			<div class="row z-depth-3">
				<div class=" col s12 padding-0px">
					<div class="section white-text padding-left-20px blue-grey lighten-1">
						<h5 class="blue-grey-text text-lighten-5">Profile</h5>
					</div>
					<div class="divider"></div>
					<form asp-controller="Account" asp-action="Profile" method="post" class="col s12" id="fromUser">
						<div class="input-field col s4">
							<input asp-for="UserName" class="validate" />
							<label asp-for="UserName">User Name</label>
						</div>
						<div class="input-field col s4 right-align">
							<button class="btn waves-effect waves-light btnSubmit" type="submit" name="action">
								<i class="material-icons right">save</i>Save
							</button>
							<button class="btn waves-effect waves-light text-reset lighten-1" type="button" name="action">
								Reset
							</button>
						</div>
						<div class="row"></div>
					</form>
				</div>
			</div>
		</div>
</div>

	@section Scripts {
		<script>
			$(document).ready(function(){
				$(document).on("click",".reset",function(){
					$('#fromUser')[0].reset();
		
			});

			$(document).on('click', '.btnSubmit', function(){
				M.updateTextFields();
			});
		});
		</script>
	}
